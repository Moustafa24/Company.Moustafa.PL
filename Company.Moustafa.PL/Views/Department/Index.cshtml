@model IEnumerable<Department>

@{
    ViewData["Title"] = "All Departments";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* إعدادات عامة */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(to right, #141e30, #243b55);
            color: #ffffff;
            padding: 20px;
            text-align: center;
        }

        /* عنوان الصفحة */
        h1 {
            font-size: 2.8rem;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: #ffcc00;
            text-shadow: 2px 2px 10px rgba(255, 204, 0, 0.6);
        }

        /* زر إنشاء قسم جديد */
        .btn-container {
            margin-bottom: 20px;
        }

        .btn {
            background: #ffcc00;
            color: #222;
            padding: 12px 25px;
            border-radius: 25px;
            font-size: 1rem;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
            display: inline-block;
            box-shadow: 0 5px 15px rgba(255, 204, 0, 0.4);
        }

            .btn:hover {
                background: #ffaa00;
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(255, 170, 0, 0.6);
            }

        /* تصميم الجدول */
        .table-container {
            width: 90%;
            margin: auto;
            overflow-x: auto;
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            padding: 15px;
            text-align: center;
            font-size: 1.1rem;
        }

        th {
            background: rgba(255, 204, 0, 0.9);
            color: #222;
            font-weight: bold;
            text-transform: uppercase;
        }

        td {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(5px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        }

        tr:hover td {
            background: rgba(255, 255, 255, 0.3);
            transition: background 0.3s ease;
        }

        /* رسالة عدم وجود بيانات */
        .alert {
            background: #e74c3c;
            color: white;
            padding: 15px;
            border-radius: 5px;
            font-size: 1.3rem;
            font-weight: bold;
            margin-top: 20px;
            box-shadow: 0 5px 15px rgba(231, 76, 60, 0.4);
        }
    </style>
</head>
<body>

    <h1>All Departments</h1>

    <div class="btn-container">
        <a class="btn" asp-action="Create">Create Department</a>
    </div>

    @if (Model.Count() > 0)
    {
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(D => D.Code)</th>
                        <th>@Html.DisplayNameFor(D => D.Name)</th>
                        <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var department in Model)
                    {
                        <tr>
                            <td>@department.Code</td>
                            <td>@department.Name</td>
                            <td>@department.CreateAt</td>
                            <partial name="_ButtonsPartialView" model="department.Id" />
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert">
            <h3>There are NO Departments :(</h3>
        </div>
    }

</body>
</html>
